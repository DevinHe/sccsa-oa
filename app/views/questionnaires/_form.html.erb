<%= simple_form_for(@questionnaire) do |f| %>
  <%= f.error_notification %>
    <%= f.hidden_field :distribute_id %>
    <table class="table table-bordered distribution">
      <thead>
      <tr class="text-center active">
        <th colspan="3" class="text-center"><h4>上海公共体育服务社区配送<br>
          服务情况问询表
        </h4></th>
      </tr>
      </thead>
      <form class="form-horizontal">
        <tbody>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <center><strong>街道镇/俱乐部问询内容</strong></center>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <label class="col-xs-4 control-label">配送内容</label>
              <div class="col-xs-8">
                <%= f.input :content, label: false, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <label class="col-xs-4 control-label">教练/专家（姓名）</label>
              <div class="col-xs-8">
                <%= f.input :coaches, label: false,as: :text, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <label class="col-xs-4 control-label">受众人数</label>
              <div class="col-xs-8">
                <%= f.input :population, label: false, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
          <style type="text/css" media="screen">
            .dropdown-menu {
              top: 20 !important;
              left: 20 !important;
              height: 320px !important;
              width: 100% !important;
              margin-top: 0;
              -webkit-border-radius: 0;
              -moz-border-radius: 0;
              border-radius: 0;
            }
          </style>
            <div class="form-group">
                <label class="col-sm-4 control-label">培训起止时间</label>
                <div class="form-group col-sm-8">
                  <div class='input-group date datetimepicker'>
                    <input type='text' class="form-control" name="questionnaire[start_time]" id="questionnaire_start_time" />
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                  </div>
                </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <label class="col-xs-4 control-label">授课情况</label>
              <div class="col-xs-8">
                <%= f.input :situation, label: false, as: :text, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="form-group">
              <label class="col-xs-4 control-label">其他</label>
              <div class="col-xs-8">
                <%= f.input :other, label: false, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <center><strong>教练/专家问询内容</strong></center>
          </td>
        </tr>
        <tr>
          <td colspan="3" class="text-center">
            <div class="form-group">
              <label class="col-sm-4 control-label">上课情况</label>
              <div class="col-sm-8">
                <%= f.input :coache_sitution, label: false, as: :text, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3" class="text-center">
            <div class="form-group">
              <label class="col-sm-4 control-label">其他</label>
              <div class="col-sm-8">
                <%= f.input :coache_other, label: false, as: :text, input_html: {class: "form-control", rows: 3} %>
              </div>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <button type="submit" class="btn btn-primary submit-question" id="quetion_btn">提交配送申报</button>
          </td>
        </tr>
      </form>
    </table>

<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#quetion_btn').on('click',function(){
      var content = $('#questionnaire_content');
      var coach = $('#questionnaire_coaches');
      var population = $('#questionnaire_population');
      var start_time = $('#questionnaire_start_time');
      var situation = $('#questionnaire_situation');
      var other = $('#questionnaire_other');
      var coache_sitution = $('#questionnaire_coache_sitution');
      var coache_other = $('#questionnaire_coache_other');
      if (content.val() == "") {
        content.focus();
        return false;
      } else if (coach.val() == ""){
        coach.focus();
        return false;
      } else if (population.val() == ""){
        population.focus();
        return false;
      } else if (start_time.val() == ""){
        start_time.focus();
        return false;
      } else if(situation.val() == "") {
        situation.focus();
        return false;
      } else if(other.val() == "") {
        other.focus();
        return false;
      } else if(coache_sitution.val() == "") {
        coache_sitution.focus();
        return false;
      } else if(coache_other.val() == "") {
        coache_other.focus();
        return false;
      }
    });
  });
</script>

