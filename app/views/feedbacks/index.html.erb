<p id="notice"><%= notice %></p>

<h1>Listing Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Apply</th>
      <th>Content</th>
      <th>Coach</th>
      <th>Suggestion</th>
      <th>Population</th>
      <th>Distribute advice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.user %></td>
        <td><%= feedback.apply %></td>
        <td><%= feedback.content %></td>
        <td><%= feedback.coach %></td>
        <td><%= feedback.suggestion %></td>
        <td><%= feedback.population %></td>
        <td><%= feedback.distribute_advice %></td>
        <td><%= link_to '查看', feedback %></td>
        <td><%= link_to '修改', edit_feedback_path(feedback) %></td>
        <td><%= link_to '删除', feedback, method: :delete, data: { confirm: '你确定要删除吗？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

