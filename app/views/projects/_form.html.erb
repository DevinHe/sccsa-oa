<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: '项目名称' %>
    <%= f.input :serial, label: '项目编号' %>
    <%= f.input :description, as: :text, label: '详细介绍' %>
    <%= f.association :category, label: '关联申报类别', as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交", class: "btn btn-primary" %>
  </div>
<% end %>
