<p id="notice"><%= notice %></p>

<div class="page-header">
  <h3>项目名称</h3>
</div>

<% if current_user.admin? %>
  <div><%= link_to '新增项目', new_project_path, class: "btn btn-success" %></div>
<% end %>
<br />

<table class="table table-hover">
  <thead>
  <tr>
    <th>项目名称</th>
    <th>项目编号</th>
    <th>申报类别</th>
    <th colspan="2">操作</th>
  </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.serial %></td>
        <td><%= project.category.name %></td>
        <% if current_user.admin? %>
          <td><%= link_to '修改', edit_project_path(project), class: "btn btn-primary btn-xs" %></td>
          <td><%= link_to '删除', project, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>


</table>