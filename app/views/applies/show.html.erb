<p id="notice"><%= notice %></p>

<table class="table table-bordered distribution">
  <thead>
  <tr class="text-center active">
    <th colspan="3" class="text-center"><h3>上海市公共体育服务社区配送申报</h3></th>
  </tr>
  </thead>
  <form class="form-horizontal">
    <tbody>
    <tr>
      <td colspan="2">
        <div class="form-group">
          <label class="col-xs-4 control-label">申报单位</label>
          <div class="col-xs-8">
            <%= @apply.user.unit %>
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <label class="col-xs-4 control-label">申报日期</label>
          <div class="col-xs-8">
            <%= my_date(Time.now) %>
          </div>
        </div>
      </td>

    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-xs-4 control-label">申报项目类别</label>
          <div class="col-xs-8">
            <%= @apply.category.name %>
          </div>
        </div>
      </td>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-xs-4 control-label">项目具体名称</label>
          <div class="col-xs-8">
            <%= @apply.project.name %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-xs-4 control-label">项目编号</label>
          <div class="col-xs-8">
            00001 padding
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3" class="text-center active">
        <label>项目实施计划</label>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">
            居民需求<br>调研情况简介
          </label>
          <div class="col-sm-8">
            <%= @apply.requirement %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">项目实施场地（类型和人数）</label>
          <div class="col-sm-8">
            <%= @apply.site %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">实施场地地址</label>
          <div class="col-sm-8">
            <%= @apply.address %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">意愿实施时间</label>
          <div class="col-sm-8">
            <%= @apply.implement_time %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">音箱及设备条件</label>
          <div class="col-sm-8">
            <%= @apply.facilities %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">下载配送申报</label>
          <div class="form-group col-sm-8">
            <% if @apply.attachment %>
              <%= link_to "申报单下载", @apply.attachment.url %>
            <% end %>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3" class="text-center active">
        <label>配送申报提交情况</label>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">上海社区体育协会</label>
          <div class="col-sm-8">
            <span class="label label-success label-distribution">审核批准</span>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">配送中心</label>
          <div class="col-sm-8">
            <span class="label label-info label-distribution">确认配送 padding</span>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="form-group">
          <label class="col-sm-4 control-label">状态</label>
          <div class="col-sm-8">
            <a href="#">填写反馈 padding | 查看反馈</a>
          </div>
        </div>
      </td>
    </tr>
    </tbody>
  </form>
</table>

<% if current_user %>
  <% if current_user == @apply.user %>
  <%= link_to '修改', edit_apply_path(@apply), 'data-no-turbolink' => true %> |
  <%= link_to '列表页', applies_path %>
    <% end %>

  <% if @apply.verify && !@apply.verify.is_pass %>
    <hr>
    <span class="label label-warning label-distribution">退回</span>
    Reason: <%= @apply.verify.content %>
  <% else %>
    <hr>
    <span class="label label-success label-distribution">批准</span>
    <% if @apply.distribute && @apply.distribute.is_distribute %>
      <span class="label label-info label-distribution">确认配送</span>
      <% if @apply.feedback.nil? %>
        <%= link_to '填写反馈表', new_feedback_path %>
        <% elsif @apply.feedback && current_user == @apply.verify.user %>
        <%= link_to '填写反馈表', edit_feedback_path(@apply.feedback) %>
        <% else %>
        <%= link_to '查看反馈表', feedback_path(@apply.feedback) %>
      <% end %>
    <% else %>
      <span class="label label-default label-distribution">未配送</span>
    <% end %>
  <% end %>
<% end %>

    <% if current_user && current_user.admin? && (@apply.verify.nil? || !@apply.verify.is_pass) && @apply.notifications.first.user == current_user %>
    <% if @apply.verify %>
    <% @verify = @apply.verify %>
    <% else %>
    <% @verify = Verify.new({apply_id: @apply.id}) %>
    <% end %>
    <%= render 'verifies/form' %>
    <% end %>

    <% if current_user && current_user.distributor? && @apply.verify && @apply.verify.is_pass %>
    <hr>
    <p>
      <strong>审批状态</strong>
      <% if @apply.verify.is_pass %>
        <span class="label label-success label-distribution">批准</span>
      <% else %>
        <span class="label label-warning label-distribution">退回</span>
      <% end %>
    </p>

    <% unless @apply.verify.content.empty? %>
    <p>
      <strong>申报退回理由:</strong>
      <%= @apply.verify.content %>
    </p>
    <% end %>

    <hr>
    <% if @apply.distribute.nil? %>
    <% @distribute = Distribute.new({apply_id: @apply.id}) %>
    <%= render 'distributes/form' %>
    <% else %>
    <p>
      <strong>配送中心状态:</strong>
      <% if @apply.distribute.is_distribute %>
        <span class="label label-info label-distribution">确认配送</span>
      <% else %>
        <span class="label label-default label-distribution">未配送</span>
      <% end %>
    </p>
  <% end %>
<% end %>

