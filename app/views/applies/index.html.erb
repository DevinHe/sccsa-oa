<p id="notice"><%= notice %></p>

<div class="page-header">
  <h3>配送一览</h3>
</div>

<div class="form-inputs form-inline">
  <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.search_field :user_unit_or_category_name_or_project_name_or_implement_time_cont, class: "form-control" %>
    </div>
    <%= f.submit "搜索", class: "btn btn-default" %>
  <% end %>
</div>

<table class="table table-hover apply-index">
  <thead>
    <tr>
      <%= content_tag :th, sort_link(@q, :created_at, '申请时间') %>
      <%= content_tag :th, sort_link(@q, :user_unit, '申请组织') %>
      <%= content_tag :th, sort_link(@q, :category_name, '申报类别') %>
      <%= content_tag :th, sort_link(@q, :project_name, '项目名称') %>
      <%= content_tag :th, sort_link(@q, :implement_time, '实施时间') %>
      <th>社区体育反馈</th>
      <th>配送中心反馈</th>
      <th colspan="3">状态</th>
    </tr>
  </thead>

  <tbody>
    <% @applies.each do |apply| %>
      <tr>
        <td><%= link_to my_date(apply.created_at), apply %></td>
        <td><%= link_to apply.user.unit, apply %></td>
        <td><%= link_to apply.category.name, apply %></td>
        <td><%= link_to apply.project.name, apply %></td>
        <td><%= link_to my_date(apply.implement_time), apply %></td>
        <td><span class="label label-success label-distribution">批准</span></td>
        <td><span class="label label-info label-distribution">确认配送</span></td>
        <td><%= link_to '项目反馈', new_feedback_path %></td>
        <td><%= link_to '重新提交 ', edit_apply_path(apply) %></td>
        <td><%= link_to '撤销申报', apply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

