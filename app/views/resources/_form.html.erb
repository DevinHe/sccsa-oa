<%= simple_form_for(@resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: '标题' %>
    <%= f.input :attachment, label: '上传文件', as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交", class: "btn btn-primary" %>
  </div>
<% end %>
