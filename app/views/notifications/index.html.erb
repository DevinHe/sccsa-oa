<p id="notice"><%= notice %></p>
<div class="page-header">
  <h3>最新通知</h3>
</div>

<div class="row">
  <ul class="list-unstyled">
    <% @notifications.each do |notification| %>
      <li class="message-time-list">
        <div class="col-xs-10">
        <%=  my_date(notification.created_at) %>
        <%=  raw notification.content %><!--<span class="label label-danger">未阅读</span> -->
        <%= content_tag(:span, "新通知", class: "label label-danger") unless notification.read %>
        </div>
        <div class="col-xs-2">
          <% if current_user.admin? %>
            <%= link_to '删除', notification, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: '确认删除？'} %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= will_paginate @notifications, renderer: BootstrapPagination::Rails, class: "will_paginate" %>

